<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout2"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/island_background">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="fill_parent"
        android:background="@color/island_background">

        <ImageView android:id="@+id/island_map" android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:src="@drawable/island"
            android:layout_gravity="center"/>

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:background="@color/island_background"
        >
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Church area"
            android:id="@+id/churchButton"
            android:layout_gravity="center"
            android:background="@drawable/object_button"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Compostela Area"
            android:id="@+id/compostelaButton"
            android:layout_gravity="center"
            android:background="@drawable/object_button"/>
    </LinearLayout>
</LinearLayout>